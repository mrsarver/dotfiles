#==============================================================================#
# SCREEN SETTINGS                                                              #
#==============================================================================#

# make screen work nice with vim
altscreen on

# disable startup message
startup_message off

# disable visual bell
vbell off

# define a bigger scrollback, default is 100 lines
defscrollback 5000

# use system shell
shell -$SHELL

# Configure status bar at the bottom of the terminal
hardstatus alwayslastline
hardstatus string "%{= km}[%{+b} %H %{-}][ %=%{w}%?%-Lw%?%{C}(%{W}%n*%f %t%?(%u)%?%{C})%{w}%?%+Lw%?%?%= %{m}][ %{G}Load: %l %{M}][%{M} %D, %d %M %Y %{+b W}%C:%s %A %{M}]"

#==============================================================================#
# SCREEN KEYBINDINGS                                                           #
#==============================================================================#

# region navigation
bind s split
bind j focus down
bind k focus up
bind ',' prev
bind '.' next

# region resizing
bind = resize =
bind + resize +1
bind - resize -1

#==============================================================================#
# TERMINAL SETTINGS                                                            #
#==============================================================================#

# allow bold colors
attrcolor b ".I"

# use terminal scrolling
termcapinfo xterm* ti@:te@

# tell screen how to set colors. AB = background, AF=foreground
termcapinfo xterm-256color 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

#==============================================================================#
# STARTUP SCREENS                                                              #
#==============================================================================#

# startup screens
screen -t terminal 0 bash
screen -t vim 1 vim
select 0
